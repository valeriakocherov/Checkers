<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:id="@+id/playerName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="casual" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#E91E63" android:textColorLink="#E91E63"/>
    <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="casual" tools:ignore="MissingConstraints" android:textColor="#E91E63"
            android:textColorLink="#E91E63"/>
</android.support.constraint.ConstraintLayout>